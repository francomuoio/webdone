<% content_for (:title) do %>
  <%= "#{@projet.title} - Messages" %>
<% end %>

<div class="tabbable-line">
    <ul class="nav nav-tabs">
      <li role="presentation"  ><%= link_to "Timeline", projet_dones_path(@projet)%></li>
      <li role="presentation" class="active" ><%= link_to "Messages", projet_messages_path(@projet)%></li>
    </ul>

    <div class="tab-content">
    </div>
</div>

<div class="part1">

  <div class="part2">
    <%= render "shared/header" if current_user.client_profile %>
  </div>

  <div class="row">
    <button data-toggle="modal" data-target="#squarespaceModal" class="btn btn-primary">Nouveau Message</button>
    <div class="modal fade" id="squarespaceModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">Ã—</span><span class="sr-only">Fermer</span></button>
            <h3 class="modal-title" id="lineModalLabel">Nouveau Message</h3>
          </div>
          <div class="modal-body">
            <%= render "shared/message_form" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- START EDIT CONTENT -->
  <div class="part3">
    <div class="container">
      <%= render 'shared/index_messages' %>
      <!-- END EDIT CONTENT -->
    </div>
  </div>
</div>
